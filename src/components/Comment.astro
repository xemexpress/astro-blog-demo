---
import { format } from "date-fns";
import type { CommentsRecord } from "../xata";

import type { SelectedPick } from "@xata.io/client";

type Props = {
    comment: SelectedPick<
        CommentsRecord,
        ("text" | "date" | "id" | "user.name")[]
    >;
};

const { comment } = Astro.props;
const initials = comment.user?.name
    .split(" ")
    .map((w) => w[0])
    .join("");
const formattedDate = format(comment.date, "MMM d, yyyy");
---

<div class="flex gap-x-12 items-start">
    <span
        class="text-teal-900 rounded-full border border-teal-900 font-bold text-left p-5"
    >
        {initials}
    </span>

    <div>
        <span class="text-zinc-700 font-bold text-xl mr-5">
            {comment.user?.name}
        </span>
        <span class="text-zinc-500 text-xl">
            {formattedDate}
        </span>
        <p class="text-zinc-500 text-2xl mt-2">
            {comment.text}
        </p>
    </div>
</div>
